<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
        android:id="@+id/txtNewDescHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#8e55d3"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="Add Description"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtDescTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textColor="@android:color/black"
            android:paddingTop="10px"
            android:paddingBottom="20px"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etNewDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="(Ex. When taking off the lid ... )"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            android:singleLine="false" />

        <Button
            android:id="@+id/btnDoneAddDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_button_done"
            android:fontFamily="sans-serif-condensed"
            android:onClick="onDoneClick"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Done"
            android:textAlignment="center"
            android:textColor="#8e55d3"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>