<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context="com.wew.azizchr.guidezprototype.TextBlockWriterActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#8e55d3"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="Add Text"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUndo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="U" />

            <Button
                android:id="@+id/btnRedo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="R" />

            <Button
                android:id="@+id/btnBold"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="B" />

            <Button
                android:id="@+id/btnItalic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="I" />

            <Button
                android:id="@+id/btnUnderline"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="_" />

            <Button
                android:id="@+id/btnHeader1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="H1" />
        </LinearLayout>

    </ScrollView>

    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </jp.wasabeef.richeditor.RichEditor>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_button_done"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Done"
        android:textAlignment="center"
        android:textColor="#8e55d3"
        android:textSize="25dp"
        android:textStyle="bold" />

</LinearLayout>
