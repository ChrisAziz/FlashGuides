<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchResult"
    android:padding="10dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_new_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/guideTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Sample guide title"
            android:textSize="26dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/guideAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/guideTitle"
            android:text="By: Mac Sauce"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/guideDatePublished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/guideAuthor"
            android:text="Published: October 29, 2018"
            android:textSize="16dp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>